<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="?attr/bgColor">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="?attr/headerColor"
        android:text="@string/txtHeader"
        android:textSize="50sp"
        android:layout_gravity="center"/>

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginHorizontal="40dp">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/bubble_blue"/>
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <Button
                    android:id="@+id/btnStartGame"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:alpha="0.5"
                    android:background="?attr/bgBubbleBlue"
                    android:elevation="4dp"
                    android:text="@string/btnStart"
                    android:textColor="?attr/textColorQuestions" />

                <Button
                    android:id="@+id/btnStats"
                    android:layout_gravity="center"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:textColor="?attr/textColorQuestions"
                    android:drawableStart="@drawable/stats_icon"
                    android:background="?attr/bgBubbleBlue"
                    android:alpha="0.5"/>

                <Button
                    android:id="@+id/btnPrefrences"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:background="?attr/bgBubbleBlue"
                    android:drawableStart="@drawable/settings_icon"
                    android:textColor="?attr/textColorQuestions"
                    android:alpha="0.5"/>
            </LinearLayout>

        </GridLayout>
</LinearLayout>
