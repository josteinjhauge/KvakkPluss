<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/gridLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/bgColor"
    android:columnCount="2">


    <TextView
        android:id="@+id/txtCorrect"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:text="@string/txtGameScreen"
        android:textColor="?attr/textColor"
        android:textSize="22sp"
        app:layout_constraintEnd_toStartOf="@+id/txtWrong"
        app:layout_constraintHorizontal_bias="0.206"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txtWrong"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:text="@string/txtGameScreen"
        android:textColor="?attr/textColor"
        android:textSize="22sp"
        app:layout_constraintEnd_toStartOf="@+id/guideline4"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txtQuestionNum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="48dp"
        android:layout_marginTop="72dp"
        android:text="@string/txtQuestionNum"
        android:textColor="?attr/textColor"
        android:textSize="22sp"
        app:layout_constraintEnd_toStartOf="@+id/guideline4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txtQuestion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:elevation="4dp"
        android:lineSpacingExtra="6dp"
        android:text="@string/txtQuestion"
        android:textAlignment="center"
        android:textColor="?attr/textColor"
        android:textSize="22sp"
        app:layout_constraintEnd_toStartOf="@+id/guideline4"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="147dp" />

    <TextView
        android:id="@+id/txtAnswer"
        android:layout_width="196dp"
        android:layout_height="36dp"
        android:layout_marginTop="36dp"
        android:background="?attr/bgQuestion"
        android:elevation="1dp"
        android:hint="@string/hint"
        android:textAlignment="center"
        android:textColor="?attr/textColor"
        android:textColorHint="?attr/textColor"
        android:textSize="22sp"
        app:layout_constraintBottom_toTopOf="@+id/btnTwo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.586"
        app:layout_constraintStart_toStartOf="@+id/guideline4"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/btnFive"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="4dp"
        android:background="?attr/bgButton"
        android:elevation="2dp"
        android:text="@string/btnFive"
        android:textColor="?attr/textColor"
        android:visibility="visible"
        app:layout_constraintBaseline_toBaselineOf="@+id/btnFour"
        app:layout_constraintEnd_toStartOf="@+id/btnSix" />

    <Button
        android:id="@+id/btnTwo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="4dp"
        android:background="?attr/bgButton"
        android:elevation="2dp"
        android:text="@string/btnTwo"
        android:textColor="?attr/textColor"
        android:visibility="visible"
        app:layout_constraintBaseline_toBaselineOf="@+id/btnOne"
        app:layout_constraintEnd_toStartOf="@+id/btnThree" />

    <Button
        android:id="@+id/btnThree"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="?attr/bgButton"
        android:elevation="2dp"
        android:text="@string/btnThree"
        android:textColor="?attr/textColor"
        android:visibility="visible"
        app:layout_constraintBaseline_toBaselineOf="@+id/btnTwo"
        tools:layout_editor_absoluteX="536dp" />

    <Button
        android:id="@+id/btnFour"
        android:layout_width="88dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="4dp"
        android:background="?attr/bgButton"
        android:elevation="2dp"
        android:text="@string/btnFour"
        android:textColor="?attr/textColor"
        android:visibility="visible"
        app:layout_constraintBottom_toTopOf="@+id/btnSeven"
        app:layout_constraintEnd_toStartOf="@+id/btnFive"
        app:layout_constraintHorizontal_bias="0.736"
        app:layout_constraintStart_toStartOf="@+id/guideline4" />

    <Button
        android:id="@+id/btnOne"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="12dp"
        android:background="?attr/bgButton"
        android:elevation="2dp"
        android:text="@string/btnOne"
        android:textColor="?attr/textColor"
        android:visibility="visible"
        app:layout_constraintBottom_toTopOf="@+id/btnFour"
        app:layout_constraintEnd_toStartOf="@+id/btnTwo"
        app:layout_constraintHorizontal_bias="0.651"
        app:layout_constraintStart_toStartOf="@+id/guideline4"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <Button
        android:id="@+id/btnNext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="28dp"
        android:layout_marginTop="16dp"
        android:background="?attr/bgConfirmButton"
        android:elevation="2dp"
        android:text="@string/btnNext"
        android:textColor="?attr/btntxtColor"
        android:visibility="visible"
        app:layout_constraintStart_toStartOf="@+id/btnNine"
        app:layout_constraintTop_toBottomOf="@+id/btnNine" />

    <Button
        android:id="@+id/btnSeven"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="8dp"
        android:background="?attr/bgButton"
        android:elevation="2dp"
        android:text="@string/btnSeven"
        android:textColor="?attr/textColor"
        android:visibility="visible"
        app:layout_constraintBottom_toTopOf="@+id/btnClear"
        app:layout_constraintEnd_toStartOf="@+id/btnEight"
        app:layout_constraintHorizontal_bias="0.736"
        app:layout_constraintStart_toStartOf="@+id/guideline4" />

    <Button
        android:id="@+id/btnEight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="4dp"
        android:background="?attr/bgButton"
        android:elevation="2dp"
        android:text="@string/btnEight"
        android:textColor="?attr/textColor"
        android:visibility="visible"
        app:layout_constraintBaseline_toBaselineOf="@+id/btnSeven"
        app:layout_constraintEnd_toStartOf="@+id/btnNine" />

    <Button
        android:id="@+id/btnNine"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="?attr/bgButton"
        android:elevation="2dp"
        android:text="@string/btnNine"
        android:textColor="?attr/textColor"
        android:visibility="visible"
        app:layout_constraintBaseline_toBaselineOf="@+id/btnEight"
        tools:layout_editor_absoluteX="534dp" />

    <Button
        android:id="@+id/btnClear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="40dp"
        android:background="?attr/bgButton"
        android:elevation="2dp"
        android:onClick="Clear"
        android:text="@string/btnClear"
        android:textColor="?attr/textColor"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/btnZero"
        app:layout_constraintHorizontal_bias="0.75"
        app:layout_constraintStart_toStartOf="@+id/guideline4" />

    <Button
        android:id="@+id/btnZero"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="?attr/bgButton"
        android:elevation="2dp"
        android:text="@string/btnZero"
        android:textColor="?attr/textColor"
        android:visibility="visible"
        app:layout_constraintBaseline_toBaselineOf="@+id/btnClear"
        tools:layout_editor_absoluteX="442dp" />

    <Button
        android:id="@+id/btnSix"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="?attr/bgButton"
        android:elevation="2dp"
        android:text="@string/btnSix"
        android:textColor="?attr/textColor"
        android:visibility="visible"
        app:layout_constraintBaseline_toBaselineOf="@+id/btnFive"
        tools:layout_editor_absoluteX="534dp" />


    <Button
        android:id="@+id/btnCancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="140dp"
        android:background="?attr/bgCancelButton"
        android:elevation="2dp"
        android:text="@string/btnCancel"
        android:textColor="?attr/btntxtColor"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.759" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="302dp" />
</androidx.constraintlayout.widget.ConstraintLayout>