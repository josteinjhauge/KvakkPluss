<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>

        <item name="bgColor">@color/white</item>
        <item name="textColor">@color/black</item>
        <item name="btntxtColor">@color/black</item>
        <item name="btnGreenTextColor">@color/green</item>
        <item name="btnBlueTextColor">@color/blue</item>
        <item name="btnRedTextColor">@color/red</item>
        <item name="metaTextColor">@color/colorPrimaryDark</item>
        <item name="textColorQuestions">@color/black</item>
        <item name="bgButton">@drawable/bg_button_light</item>
        <item name="bgConfirmButton">@drawable/bg_button_confirm_light</item>
        <item name="bgCancelButton">@drawable/bg_cancel_button_light</item>
        <item name="bgCorrect">@drawable/bg_correct_light</item>
        <item name="bgWrong">@drawable/bg_wrong_light</item>
