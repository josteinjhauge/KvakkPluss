<resources>
    <!-- Base application theme. -->
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="textColor">@color/black</item>
    </style>

    <style name="LightTheme" parent="AppTheme">
        <!-- Customize your theme here. -->
        <item name="bgColor">@color/white</item>
        <item name="textColor">@color/black</item>
        <item name="metaTextColor">@color/colorPrimaryDark</item>
        <item name="textColorQuestions">@color/black</item>
        <item name="bgQuestion">@drawable/bg_question_light</item>
        <item name="bgButton">@drawable/bg_button_light</item>
        <item name="bgConfirmButton">@drawable/bg_button_confirm_light</item>
        <item name="bgCancelButton">@drawable/bg_cancel_button_light</item>
        <item name="btntxtColor">@color/black</item>
        <item name="bgBubble">@drawable/bubble_button</item>
    </style>

    <style name="DarkTheme" parent="AppTheme">
        <!-- Customize your darktheme here. -->
        <item name="bgColor">@color/base</item>
        <item name="textColor">@color/white</item>
        <item name="metaTextColor">@color/colorPrimaryDark</item>
        <item name="textColorQuestions">@color/white</item>
        <item name="bgQuestion">@drawable/bg_question_dark</item>
        <item name="bgButton">@drawable/bg_button_dark</item>
        <item name="bgConfirmButton">@drawable/bg_button_confirm_dark</item>
        <item name="bgCancelButton">@drawable/bg_cancel_button_dark</item>
        <item name="btntxtColor">@color/black</item>
        <item name="bgBubble">@drawable/bubble_button</item>

    </style>

</resources>